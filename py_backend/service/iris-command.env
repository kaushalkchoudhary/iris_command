# Copy this file to /etc/default/iris-command and edit as needed.
# Example:
#   sudo cp py_backend/service/iris-command.env /etc/default/iris-command
#   sudo chown root:root /etc/default/iris-command
#   sudo chmod 0644 /etc/default/iris-command

# GPU/runtime
CUDA_VISIBLE_DEVICES=0
IRIS_USE_NVENC=1
IRIS_RAW_USE_NVENC=0

# Backend behavior
IRIS_MAX_RTSP_STREAMS=4
IRIS_MAX_UPLOAD_STREAMS=2
IRIS_PROCESSED_FPS=30
IRIS_PERSIST_ACTIVE_SOURCES=0

# Auth/session behavior
IRIS_AUTH_MAX_IPS=2
IRIS_AUTH_IDLE_TTL_SECONDS=1800

